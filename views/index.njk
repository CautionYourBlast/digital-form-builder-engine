{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "partials/components.njk" import componentList %}

{% extends 'layout.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errors %}
        {{ govukErrorSummary(errors) }}
      {% endif %}

      {% include "partials/heading.njk" %}

      {% if page.hasFormComponents or page.hasNext %}
        {% include "partials/form.njk" %}
      {% else %}
        {{ componentList(components) }}
      {% endif %}

      <pre>{{ value | dump(2) | safe }}</pre>
    </div>
  </div>
{% endblock %}
